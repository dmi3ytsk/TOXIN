extends ../../layouts/page

include ../../blocks/bulletList/bulletList
include ../../blocks/aboutRoom/aboutRoom
include ../../blocks/userFeedback/userFeedback
include ../../blocks/cardBuyRoom/cardBuyRoom


block vars
   -const title = "Подробнее о номере №888люкс";
   -const guests = ["Взрослые", "Дети", "Младенцы"]
   -const bullet = ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, <br>а выезд до 12:00"]
   -const cancel = "Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги."
   -const user_murad = {username: "Мурад Сарафанов", avatar: "../../img/user_murad.png", lastActivity: "5 дней назад", likes: 12, isLiked: true, feedback: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."}
   -const user_patricia = {username: "Патрисия Стёклышкова", avatar: "../../img/user_patricia.png", lastActivity: "Неделю назад", likes: 2, feedback: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"}
   -const footerFullBlocksData = [["Навигация", "О нас", "Новости", "Служба поддержки", "Услуги"],["О нас", "О сервисе", "Наша команда", "Вакансии", "Инвесторы"],["Служба поддержки", "Соглашения", "Сообщества","Связь с нами"]]


block main
   main.room-details-page
      section.room-details-page__photos
         img(src="../../img/roomPhotos/room888/room__1.png" alt="Фото большая комната").room-details-page__photo
         img(src="../../img/roomPhotos/room888/room__2.png" alt="Фото маленькая комната").room-details-page__photo
         img(src="../../img/roomPhotos/room888/room__3.png" alt="Фото кабинет").room-details-page__photo
      .room-details-page__body
         section.room-details-page__info
            .room-details-page__info-block
               wrap
                  .room-details-page__info-header Сведения о номере
                  +aboutRoom({title: "Комфорт", subtitle: "Шумопоглощающие стены", icon: "insert_emoticon"})
                  +aboutRoom({title: "Удобство", subtitle: "Окно в каждой из спален", icon: "location_city"})
                  +aboutRoom({title: "Уют", subtitle: "Номер оснащен камином", icon: "whatshot"})
               wrap   
                  .room-details-page__info-header Впечатления от номера
                  .room-details-page__info-diagram.doughnut-chart 
                     .doughnut-chart__diagram 
                        .doughnut-chart__diagram-body
                           .doughnut-chart__diagram-wrap
                           .doughnut-chart__diagram-great
                           .doughnut-chart__diagram-good 
                           .doughnut-chart__diagram-norm
                        .doughnut-chart__diagram-counter
                           .doughnut-chart__diagram-counter-value 260 
                           .doughnut-chart__diagram-counter-voice  голосов
                     .doughnut-chart__legend
                        .doughnut-chart__legend-dot
                         .doughnut-chart__legend-content Великолепно
                        .doughnut-chart__legend-dot
                         .doughnut-chart__legend-content Хорошо
                        .doughnut-chart__legend-dot
                         .doughnut-chart__legend-content Удовлетворительно
                        .doughnut-chart__legend-dot
                         .doughnut-chart__legend-content Разочарован

            .room-details-page__info-block
               .room-details-page__info-block-feedbacks
                  .room-details-page__info-header Отзывы посетителей номера
                  .room-details-page__info-subtitle 2 отзыва
               +userFeedback({user: user_murad})
               +userFeedback({user: user_patricia})
            .room-details-page__info-block
               wrap
                  .room-details-page__info-header.room-details-page__info-header-rule Правила
                  +bulletList({list: bullet})
               wrap.room-details-page__info-block-cancel  
                  .room-details-page__info-header Отмена
                  .room-details-page__info-cancel-text=cancel
         section.room-details-page__booking
            +buyRoom()

