extends ../../layouts/page

include ../../blocks/bullet-list/bullet-list
include ../../blocks/about-room/about-room
include ../../blocks/user-feedback/user-feedback
include ../../blocks/card-buy-room/card-buy-room


block vars
  include ./const.pug

block main
  main.room-details-page
    section.room-details-page__photos
      img(src="../../pages/room-details/img/room888/room__1.png" alt="Фото большая комната").room-details-page__photo
      img(src="../../pages/room-details/img/room888/room__2.png" alt="Фото маленькая комната").room-details-page__photo
      img(src="../../pages/room-details/img/room888/room__3.png" alt="Фото кабинет").room-details-page__photo
    .room-details-page__body
      section.room-details-page__info
        .room-details-page__info-block
          div
            .room-details-page__info-header Сведения о номере
            +about-room({title: "Комфорт", subtitle: "Шумопоглощающие стены", icon: "insert_emoticon"})
            +about-room({title: "Удобство", subtitle: "Окно в каждой из спален", icon: "location_city"})
            +about-room({title: "Уют", subtitle: "Номер оснащен камином", icon: "whatshot"})
          div   
            .room-details-page__info-header Впечатления от номера
            .room-details-page__info-diagram.doughnut-chart 
              .doughnut-chart__diagram 
                .doughnut-chart__diagram-body
                  .doughnut-chart__diagram-wrap
                  .doughnut-chart__diagram-great
                  .doughnut-chart__diagram-good 
                  .doughnut-chart__diagram-norm
                .doughnut-chart__diagram-counter
                  .doughnut-chart__diagram-counter-value 260 
                  .doughnut-chart__diagram-counter-voice  голосов
              .doughnut-chart__legend
                .doughnut-chart__legend-dot
                  .doughnut-chart__legend-content Великолепно
                .doughnut-chart__legend-dot
                  .doughnut-chart__legend-content Хорошо
                .doughnut-chart__legend-dot
                  .doughnut-chart__legend-content Удовлетворительно
                .doughnut-chart__legend-dot
                  .doughnut-chart__legend-content Разочарован

        .room-details-page__info-block
          .room-details-page__info-block-feedbacks
            .room-details-page__info-header Отзывы посетителей номера
            .room-details-page__info-subtitle 2 отзыва
          +user-feedback({user: user_murad})
          +user-feedback({user: user_patricia})
        .room-details-page__info-block
          div
            .room-details-page__info-header.room-details-page__info-header-rule Правила
            +bullet-list({list: bullet})
          .room-details-page__info-block-cancel  
            .room-details-page__info-header Отмена
            .room-details-page__info-cancel-text=cancel
      section.room-details-page__booking
        +card-buy-room()

