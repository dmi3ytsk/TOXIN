include ../textfield/textfield

mixin footer(options)
  -const { isMobile } = options
  -const mobileFooter = isMobile? "footer_mobile" : ""
  -const mobileFooterFull = isMobile? "footer__full_mobile" : ""
  -const mobileFooterCopyright = isMobile? "footer__copyright_mobile" : ""
  -const mobileFooterLogo = isMobile? "footer__copyright-logo_mobile" : ""
      footer(class=`${mobileFooter}`).footer
        div(class=`${mobileFooterFull}`).footer__full
          .footer__body
            .footer__full-block
              a(href="../index/index.pug")
                img(src="../../blocks/footer/img/toxin-logo.png" alt="Toxin Hotel Logo").footer__full-block-item
              .footer__full-block-item Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            each block in footerFullBlocksData
              .footer__full-block 
                ul 
                  each item in block 
                    a(href="../index/index.pug").footer__full-block-item= item
                      li
            .footer__full-block 
              ul
                li.footer__full-block-item Подписка
                li.footer__full-block-item Получайте специальные предложения и новости сервиса
                li.footer__full-block-item
                  +textfield({ type: "email", placeholder: "Email", subscribe: 1})


        div(class=`${mobileFooterCopyright}`).footer__copyright
          .footer__body
            a(href="../index/index.pug" class=`${mobileFooterLogo}`).footer__copyright-logo 
              img(src="../../blocks/footer/img/toxin-logo.png" alt="Toxin Hotel Logo" class=`${mobileFooterLogo}`).footer__copyright-logo   
            .footer__copyright-text Copyright © 2018 Toxin отель. Все права защищены.
            .footer__copyright-socials
              a(href="https://twitter.com/" target="_blank" rel="noopener noreferrer" class="fab fa-twitter")
              a(href="https://facebook.com/" target="_blank" rel="noopener noreferrer" class="fab fa-facebook-square")
              a(href="https://instagram.com/" target="_blank" rel="noopener noreferrer" class="fab fa-instagram")
