include ../textfield/textfield
include ../button/button

mixin card-login ()
  .card-login
    h1.card-login__title.font-title Войти
    .card-login__input
      +textfield({ type: "email", placeholder: "Email"})
      +textfield({ type: "text", placeholder: "Пароль"})
    .card-login__login-button
      +button({ isActive: true, title: "войти", style: "fillArrow", page: "../index/index.pug"})
    .card-login__footer
      span.font-body Нет аккаунта на Toxin?
      +button({ isActive: true, title: "создать", style: "void", page:"../../pages/registration/registration.pug"})

